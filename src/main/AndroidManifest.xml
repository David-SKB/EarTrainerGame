<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidsk.eartrainergame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/gameicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".controller.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>

        <activity android:name=".controller.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".controller.NewGameActivity" android:screenOrientation="portrait"/>
        <activity android:name=".controller.HelpActivity" android:screenOrientation="portrait"/>
        <activity android:name=".controller.MyScoreActivity" android:screenOrientation="portrait"/>
        <activity android:name=".controller.SettingsActivity" android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>